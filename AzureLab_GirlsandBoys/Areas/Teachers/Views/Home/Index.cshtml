@model List<Tasks>
@{
    ViewBag.Title = "Teachers";
}
<h1 class="display-4">@ViewBag.Greeting</h1>
<h2>Number of Teachers: 2</h2>
@*This is the link to return to home, it goes to the default area*@

@*This code creates a table with a foreach that loops through the properties of the task list*@
<br />
<br />
<div>
    <h3 class="text-center">Teachers Information </h3>
    <br />
    <table class="table"
       <thead class="thead-dark">
           <tr>
               <th>Id</th>
               <th>Description</th>
               <th>Location</th>
           </tr>
       </thead>
    <tbody>
        @foreach (var task in Model)
        {
                <tr>
                    <td>@task.Id |</td>
                    <td>@task.Description</td>
                    <td>| @task.Location</td>
                </tr>
            }
    </tbody>
</table>

</div>

<a asp-area="default" asp-controller="Home" asp-action="Index" class="btn">Go Back Home</a>